{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es7", "esnext", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2015",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "vendor", ".bundle"]
}
