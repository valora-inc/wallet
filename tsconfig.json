{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "locales/*": ["locales/*"],
      "src/*": ["src/*"],
      "test/*": ["test/*"],
      "react": ["./node_modules/@types/react"]
    },
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es7", "esnext", "dom"],
    "moduleResolution": "Node16",
    "module": "Node16",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2015",
    "strict": true
  },
  "files": ["jest_setup.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "vendor", ".bundle"]
}
