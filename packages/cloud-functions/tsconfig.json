{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./dist",
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es7", "esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2017",
    "strict": true
  },
  "include": ["src", "locales"],
  "exclude": ["node_modules", ".bundle"]
}
