{
  "bail": 3,
  "setupFilesAfterEnv": ["@celo/flake-tracker/src/jest/setup.js"],
  "globalSetup": "@celo/flake-tracker/src/jest/setup.global.js",
  "globalTeardown": "@celo/flake-tracker/src/jest/teardown.global.js",
  "testEnvironment": "@celo/flake-tracker/src/jest/environments/detox.js",
  "reporters": [
    "detox/runners/jest/streamlineReporter",
    ["jest-html-reporter", {
      "pageTitle": "E2E Test Report",
      "outputPath": "e2e/test-results/index.html",
      "executionTimeWarningThreshold": 90,
      "includeFailureMsg": true
    }],
    ["jest-junit", {
      "suiteName": "E2E Test Report",
      "outputDirectory": "e2e/test-results",
      "outputName": "junit.xml",
      "reportTestSuiteErrors": true
    }]
  ],
  "verbose": true,
  "testMatch": ["**/*.spec.js"],
  "testTimeout": 300000,
  "testRunner": "jest-circus/runner"
}
