    "bunyan": "~1.8.15",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-prom-bundle": "^6.3.4",
    "firebase-admin": "^9.5.0",
    "graphql": "^14.1.1",
    "prom-client": "^13.1.0",
