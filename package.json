{
  "name": "celo",
  "version": "1.0.0",
  "author": "Celo",
  "license": "SEE LICENSE IN SUB-PACKAGES",
  "private": true,
  "scripts": {
    "install-pkg": "yarn install --link-duplicates",
    "lint": "yarn lerna run lint && yarn run --silent lint:do-not-merge",
    "lint:do-not-merge": "! git grep -E 'DO[ _]*NOT[ _]*MERGE'",
    "prettify": "yarn run prettier --config .prettierrc.js --write '**/*.+(ts|tsx|js|jsx|json|sol|java|yml|yaml)'",
    "prettify:diff": "yarn run prettier --config .prettierrc.js --list-different '**/*.+(ts|tsx|js|jsx|json|sol|java|yml|yaml)'",
    "reset": "yarn reset-modules && yarn reset-cache",
    "reset-cache": "yarn reset-yarn && yarn reset-rn",
    "reset-modules": "rm -rf node_modules/ packages/*/node_modules",
    "reset-rn": "watchman watch-del-all; rm -rf $TMPDIR/metro-cache-*; rm -rf $TMPDIR/haste-map-*; rm -rf $TMPDIR/metro-symbolicate*",
    "reset-yarn": "yarn cache clean",
    "test": "yarn run lerna run test",
    "build": "yarn run lerna run build",
    "build:wallet": "yarn build --scope @celo/mobile --include-filtered-dependencies && cd packages/mobile/ios && bundle exec pod install && cd ../../..",
    "docs": "yarn run lerna run docs",
    "check-licenses": "yarn licenses list --prod | grep '\\(─ GPL\\|─ (GPL-[1-9]\\.[0-9]\\+ OR GPL-[1-9]\\.[0-9]\\+)\\)' && echo 'Found GPL license(s). Use 'yarn licenses list --prod' to look up the offending package' || echo 'No GPL licenses found'",
    "report-coverage": "yarn run lerna run test-coverage",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "postinstall": "yarn run lerna run postinstall && patch-package && yarn keys:decrypt && yarn run unzipCeloClient",
    "unzipCeloClient": "cd node_modules/@celo/client/build/bin && yarn run postinstall && cd ../../../../..",
    "keys:decrypt": "bash scripts/key_placer.sh decrypt",
    "keys:encrypt": "bash scripts/key_placer.sh encrypt",
    "check:packages": "node ./scripts/check-packages.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.+(ts|tsx|js|jsx|json|sol|java|yml|yaml)'",
      "pre-push": "node ./scripts/hooks/pre-push.js"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/phone-number-privacy/*",
      "packages/sdk/*",
      "packages/sdk/wallets/*"
    ],
    "nohoist": [
      "**/openzeppelin-solidity",
      "**/solidity-bytes-utils",
      "**/@apollo/react-testing"
    ]
  },
  "devDependencies": {
    "@actions/github": "^5.0.0",
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "codecov": "^3.6.5",
    "husky": "^3.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "jest-junit": "^10.0.0",
    "jest-snapshot": "^26.1.0",
    "lerna": "^3.16.0",
    "patch-package": "^6.2.2",
    "prettier": "2.2.1",
    "prettier-plugin-java": "^0.6.0",
    "prettier-plugin-solidity": "1.0.0-alpha.35",
    "pretty-quick": "^2.0.1",
    "solc": "0.5.8",
    "ts-jest": "^26.5.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "**/truffle/mocha": "^6.2.2",
    "**/truffle-security/mocha": "^6.2.2",
    "node-gyp": "5.0.1",
    "tar": "4.4.18",
    "lodash": "~4.17.21",
    "react-native-ntp-client": "^1.0.0",
    "**/deep-extend": "^0.5.1",
    "**/extend": "^3.0.2",
    "**/cross-fetch": "^3.0.2",
    "bignumber.js": "9.0.0",
    "prettier": "^2.2.1",
    "@types/prettier": "^2.2.1",
    "eslint-utils": "^1.4.1",
    "set-value": "^4.0.1",
    "https-proxy-agent": "^5.0.0",
    "mixin-deep": "^2.0.1",
    "js-yaml": "^3.13.1",
    "logkitty": "^0.7.1",
    "minimist": "^1.2.5",
    "websocket-extensions": "^0.1.4",
    "elliptic": "^6.5.3",
    "dot-prop": "^5.2.0",
    "bl": "^4.0.3",
    "node-libs-react-native": "^1.2.0",
    "node-forge": "^1.0.0",
    "web3-eth-contract": "1.3.0",
    "ua-parser-js": "^0.7.24",
    "underscore": "^1.12.1",
    "react-native-flipper": "^0.127.0",
    "y18n": "5.0.5",
    "css-what": "5.0.1",
    "normalize-url": "6.0.1",
    "trim-newlines": "^4.0.2",
    "glob-parent": "^5.1.2",
    "node-fetch": "^2.6.7",
    "simple-get":"^4.0.1"
  }
}
