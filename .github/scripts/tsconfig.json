{
  "compilerOptions": {
    "lib": ["es2020"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["*.js", "*.ts"]
}
